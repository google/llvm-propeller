#     lui     a0, %hi(foo)
#     addi    a0, a0, %lo(foo)
#     lw      a0, %lo(foo)(a0)
#
# .section .reloc_fedcba98, "ax", @progbits
# foo = 0xfedcba98
#     lui     a0, %hi(foo)
#     addi    a0, a0, %lo(foo)
