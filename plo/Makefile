	./stage1-compiler -std=c++11 -stdlib=libc++ -nostdinc++  -I./stage1/install/include/c++/v1/ -I/usr/lib/clang/8.0.1/include -L./stage1/install/lib -Wl,-rpath,./stage1/install/lib $< -fbasicblock-sections=all -o $@ -lc++

